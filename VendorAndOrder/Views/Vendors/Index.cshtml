@{
  Layout = "_Layout";
}

<div class="jumbotron bakery-jumbotron">
  <h1 class="bakery-jumbotron-heading">VENDOR LIST</h1>
</div>
<div class="bakery-body-container">
  @using VendorAndOrder.Models;
  @if (@Model.Count == 0)
  {
    <h1>No vendors found</h1>
    <h6>Please use the menu at the top to add a vendor.</h6>
  }
  else
  {
    @foreach (Vendor vendor in Model)
    {
      <div class="vendor-order-container">
        <h1><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h1>
        <h6>@vendor.VendorDescription.</h6>
      </div>
    }
  }